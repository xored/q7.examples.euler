Entry-Name: .content

proc problem2 [val maxFib] {
	iteration 1 1 100 0
}

proc iteration [val fib1] [val fib2] [val maxFib] [val result] {
	let [val fib3 [plus $fib1 $fib2]] {
		if [$fib3 | gt $maxFib] {
			$result
		} -else {
			if [mod $fib3 2 | eq 0] {
				iteration $fib2 $fib3 $maxFib [plus $result $fib3]
			} -else {
				iteration $fib2 $fib3 $maxFib $result
			}
		}
	}
}

log [format "The answer is %d" [problem2]]
